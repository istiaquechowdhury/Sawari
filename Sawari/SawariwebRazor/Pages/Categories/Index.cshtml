@page
@model SawariwebRazor.Pages.Categories.IndexModel


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>

        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-page="/categories/create">
                <i class="fa-solid fa-plus"></i> &nbsp Create new Category
            </a>

        </div>


    </div>


    <table class="table table-bordered table-striped">
        <thead>


            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>

                </th>

            </tr>

        </thead>

        <tbody>
            @foreach (var obj in Model.Categories)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>

                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-page="/categories/Edit" asp-route-id="@obj.Id">
                                <i class="fa-solid fa-pen-to-square"></i> Edit
                            </a>
                            <a class="btn btn-danger mx-2" asp-page="/categories/Delete" asp-route-id="@obj.Id">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>

    </table>
</div>
