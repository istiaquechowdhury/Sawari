@page
@model SawariwebRazor.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0" style="margin-bottom:5px">Category Name</label>
            <input asp-for="Category.Name" class="form-control" disabled>
            <span asp-validation-for="Category.Name" class="text-danger"></span>

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0" style="margin-bottom:5px">Display Order</label>
            <input asp-for="Category.DisplayOrder" class="form-control" disabled>
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>

            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-outline-secondary form-control" asp-page="/categories/Index">
                    Back to list
                </a>
            </div>
        </div>

    </div>
</form>

@section Scripts
    {
    @{
        <partial name="_validationScriptsPartial" />
    }
}